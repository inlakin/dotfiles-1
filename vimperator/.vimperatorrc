" vim: set ft=vimperator
set defsearch=duckduckgo
set hlsearch
set ignorecase
set incsearch
set maxitems=10
set newtab=all
set smartcase
set titlestring="Firefox"
" set noloadplugins

" don't focus the new opened tab automatically
set activate=

" don't focus any input elements automatically when open pages
set focuscontent

set gui=none,tabs,addons,bookmarks

set complete=sbfl

set showstatuslinks=1
set status=ssl,input,location,bookmark,history,tabcount,position
set editor="urxvt -e vim"
set suggestengines=
set animations=true

set hintchars=hjklasdfgyuiopqwertnmzxcvb

" ---------------------------------------------------------------------------- "
"                                  keybindings                                 "
" ---------------------------------------------------------------------------- "

mapclear
cmapclear
imapclear

inoremap <C-a> <C-Home><C-S-End>

map <C-S-c> <C-c>
imap <C-S-c> <C-c>

noremap p <Nop>
noremap <C-p> <Nop>

noremap j 5j
noremap k 5k

nnoremap <C-n> :nsp <Return>

nnoremap <S-J> :tabprevious<Return>
nnoremap <S-K> :tabnext<Return>
nnoremap <C-h> :tabprevious<Return>
nnoremap <C-l> :tabnext<Return>
nnoremap <C-t> :tabnew<Return>

" ---------------------------------------------------------------------------- "
"                                   ui tweak                                   "
" ---------------------------------------------------------------------------- "

hi StatusLine           color: #c9c1ba; background: #0c1115; font-family: terminus;
hi Normal               color: #c9c1ba; background: #0c1115;  font-family: terminus;
hi CmdLine              color: #c9c1ba; background: #0c1115;
hi CmdLine>*            font-family: terminus;
hi PromptText           color: #c9c1ba; background: #0c1115; font-family: terminus;
hi WarningMsg           color: #c9c1ba; background: #c2454e; font-family: terminus;
hi ErrorMsg             color: #c9c1ba; background: #c2454e; font-family: terminus;
hi CompDesc             color: #c9c1ba;  font-family: terminus;
hi CompItem[selected]   color: #0c1115; background: #6880b5; font-family: terminus;
hi Filter               color: #15814c; font-family: terminus;
hi ModeMsg              color: #0c1115; color: #529e67; font-family: terminus;
hi InfoMsg              color: #0c1115; font-family: terminus;
hi Keyword              color: #c2454e; font-family: terminus;
hi Tag                  color: #8a7a63; font-family: terminus;
hi Enabled:             color: #15814c; font-family: terminus;
hi Disabled:            color: #c2454e; font-family: terminus;
hi URL                  color: #15814c; font-family: terminus;
hi Hint font-family: inherit; font-size: 11px; font-weight: bold; text-transform: uppercase; color: #c9c1ba; background-color: #96262e; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding: 0px 1px 0px 1px;
hi Hint::after          content: attr(number);
hi HintActive           color: #0c1115; background: #15814c;
hi HintElem             color: #0c1115; background: #6175a4;
